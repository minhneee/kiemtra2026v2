}

<style>
    * {
        --primary: #16A34A;
        --primary-dark: #15803D;
        --success: #22C55E;
        --danger: #EF4444;
        --warning: #F59E0B;
        --gray-50: #F9FAFB;
        --gray-100: #F3F4F6;
        --gray-200: #E5E7EB;
        --gray-600: #4B5563;
        --gray-900: #111827;
    }

    .news-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .news-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        gap: 1rem;
    }

    .news-title {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .news-title h1 {
        margin: 0;
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--gray-900);
    }

    .news-title p {
        margin: 0;
        color: var(--gray-600);
        font-size: 0.95rem;
    }

    .btn-add {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 0.75rem 2rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(22, 163, 74, 0.25);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(22, 163, 74, 0.35);
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .news-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid var(--gray-200);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .news-card:hover {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        transform: translateY(-4px);
    }

    .news-card-header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }

    .news-badges {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .badge {
        padding: 0.4rem 0.75rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
    }

    .badge-pinned {
        background: linear-gradient(135deg, var(--danger) 0%, #DC2626 100%);
        color: white;
    }

    .badge-date {
        background: var(--gray-100);
        color: var(--gray-600);
    }

    .news-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn-icon {
        width: 32px;
        height: 32px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: all 0.2s ease;
        background: var(--gray-100);
        color: var(--gray-600);
    }

    .btn-icon:hover {
        background: var(--primary);
        color: white;
    }

    .btn-icon.delete:hover {
        background: var(--danger);
    }

    .news-card-body {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .news-title-card {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--gray-900);
        line-height: 1.4;
    }

    .news-content {
        color: var(--gray-600);
        font-size: 0.95rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex: 1;
    }

    .news-card-footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--gray-200);
        display: flex;
        gap: 0.75rem;
    }

    .btn-read {
        flex: 1;
        padding: 0.6rem 1rem;
        border: 1px solid var(--primary);
        background: white;
        color: var(--primary);
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-read:hover {
        background: var(--primary);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 12px;
        border: 2px dashed var(--gray-200);
    }

    .empty-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .empty-text {
        color: var(--gray-600);
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .empty-button {
        display: inline-block;
        background: var(--primary);
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .empty-button:hover {
        background: var(--primary-dark);
    }

    @@media (max-width: 768px) {
        .news-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .news-grid {
            grid-template-columns: 1fr;
        }

        .btn-add {
            width: 100%;
            justify-content: center;
        }
    }
</style>

