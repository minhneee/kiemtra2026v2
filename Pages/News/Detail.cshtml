<style>
    * {
        --primary: #16A34A;
        --primary-dark: #15803D;
        --gray-50: #F9FAFB;
        --gray-100: #F3F4F6;
        --gray-200: #E5E7EB;
        --gray-600: #4B5563;
        --gray-900: #111827;
    }

    .detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .detail-header {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 2.5rem 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(22, 163, 74, 0.15);
    }

    .detail-header h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 800;
        line-height: 1.3;
    }

    .detail-meta {
        display: flex;
        gap: 1.5rem;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        opacity: 0.95;
    }

    .detail-body {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--gray-200);
        line-height: 1.8;
        color: var(--gray-900);
        font-size: 1rem;
        margin-bottom: 2rem;
        white-space: pre-wrap;
        word-break: break-word;
    }

    .detail-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        padding-top: 1.5rem;
        border-top: 1px solid var(--gray-200);
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(22, 163, 74, 0.25);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(22, 163, 74, 0.35);
    }

    .btn-secondary {
        background: var(--gray-100);
        color: var(--gray-900);
        border: 1px solid var(--gray-200);
    }

    .btn-secondary:hover {
        background: var(--gray-200);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 16px;
        border: 2px dashed var(--gray-200);
    }

    .empty-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .empty-text {
        color: var(--gray-600);
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 768px) {
        .detail-container {
            padding: 1rem;
        }

        .detail-header {
            padding: 1.5rem 1rem;
        }

        .detail-header h1 {
            font-size: 1.5rem;
        }

        .detail-body {
            padding: 1.5rem;
        }

        .detail-meta {
            flex-direction: column;
            gap: 0.75rem;
        }

        .detail-actions {
            flex-direction: column-reverse;
        }

        .detail-actions .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="detail-container">
    @if (Model.News?.Id > 0)
    {
