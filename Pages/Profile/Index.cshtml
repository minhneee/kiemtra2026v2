        background: linear-gradient(135deg, #F0FDF4 0%, var(--color-white) 100%);
    }

    .match-item.loss {
        border-left-color: #EF4444;
        background: linear-gradient(135deg, #FEF2F2 0%, var(--color-white) 100%);
    }

    .match-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .match-type {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        background: var(--color-gray-200);
        border-radius: var(--radius-sm);
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--color-gray-800);
    }

    .match-result-badge {
        font-weight: 700;
        font-size: 0.9rem;
    }

    .match-result-badge.win {
        color: #10B981;
    }

    .match-result-badge.loss {
        color: #EF4444;
    }

    .match-meta {
        font-size: 0.85rem;
        color: var(--color-gray-600);
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: var(--color-gray-50);
        border-radius: var(--radius-md);
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .empty-state-text {
        color: var(--color-gray-600);
        font-size: 1rem;
        margin: 0;
    }

    .achievement-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
    }

    .achievement-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);
        border: 2px solid var(--color-gray-200);
        border-radius: var(--radius-md);
        transition: all var(--transition-base);
        text-align: center;
    }

    .achievement-badge:hover {
        transform: scale(1.05);
        border-color: var(--color-primary);
        box-shadow: 0 4px 12px rgba(22, 163, 74, 0.2);
    }

    .achievement-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .achievement-name {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--color-gray-800);
    }

    .btn {
        padding: 0.85rem 1.5rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        border: none;
        transition: all var(--transition-base);
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: var(--gradient-primary);
        color: var(--color-white);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(22, 163, 74, 0.3);
    }

    .view-all {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-gray-200);
    }

    @@media (max-width: 1024px) {
        .two-column-section {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .profile-banner {
