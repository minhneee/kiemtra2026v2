            text-align: center;
            gap: 1.5rem;
        }

        .profile-name {
            font-size: 1.8rem;
        }

        .profile-stats-inline {
            justify-content: center;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .achievement-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>

