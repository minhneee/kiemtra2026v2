        font-size: 1rem;
        border: 2px solid var(--color-gray-200);
        border-radius: 8px;
        font-family: inherit;
        transition: all 0.3s ease;
        background: var(--color-white);
    }

    .form-control:focus {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 4px rgba(0, 168, 107, 0.1);
    }

    .form-control::placeholder {
