        gap: 0.5rem;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--color-gray-200);
    }

    .meta-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.85rem;
        background: var(--color-gray-100);
        border-radius: var(--radius-sm);
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--color-gray-800);
    }

    .meta-badge.creator {
        background: #E0E7FF;
        color: #3730A3;
    }

    .meta-badge.rank {
        background: #FEF3C7;
        color: #92400E;
    }

    .meta-badge.prize {
        background: #FED7AA;
        color: #7C2D12;
    }

    .meta-badge.fee {
        background: #D1FAE5;
        color: #065F46;
    }

    .challenge-footer {
        margin-top: auto;
    }

    .btn {
        padding: 0.85rem 1.5rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        border: none;
        transition: all var(--transition-base);
        text-decoration: none;
        display: block;
        width: 100%;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
        color: var(--color-white);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(22, 163, 74, 0.3);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--color-white);
        border-radius: var(--radius-lg);
        border: 2px dashed var(--color-gray-200);
    }

    .empty-state-icon {
