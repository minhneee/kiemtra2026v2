        margin-bottom: 1rem;
    }

    .empty-state-text {
        font-size: 1.1rem;
        color: var(--color-gray-600);
        margin: 0 0 1rem;
    }

    @@media (max-width: 768px) {
        .challenge-hero {
            flex-direction: column;
            align-items: flex-start;
        }

